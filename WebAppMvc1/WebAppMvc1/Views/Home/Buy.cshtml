
@{
    ViewBag.Title = "Покупка машины";
}

<div>
    <h3> Оформление заказа</h3>

    <form method="post">

        <input type="hidden" value="@ViewBag.CarId" name="CarId" />
        <table>
            <tr>
                <td><p>Введите Фио</p></td>
                <td><input type="text" name="FIO" /></td>
            </tr>
            <tr>
                <td><p>Введите адресс доставки</p></td>
                <td>
                    <input type="text" name="Address" />
                </td>
            </tr>
            <tr><td><input type="submit" value="Отправить" /></td></tr>
        </table>

    </form>
</div>

